<div class="row">
  <div class="col-lg-3">
    <%= render 'home/user_info' %>
  </div>
  <div id="newsfeed" class="col-lg-6">
    <%= render 'posts/form' %>
    <br>
    <div id="activities">
      <% @activities.each do |activity| %>
        <%= render 'posts/post', post: activity %>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3">
    <%= render 'home/links' %>
  </div>
</div>