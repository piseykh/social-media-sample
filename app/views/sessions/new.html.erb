<div class="row">
  <div class="col-lg-4 col-lg-offset-4 well">
    <h3 class="text-center">Log in</h3>
    <br>
    <%= form_tag(sign_in_path, :method => "get") do %>

      <div class="form-group">
        <%= label_tag(:email, "Email:") %>
        <%= text_field_tag(:email,params[:email],class: 'form-control', autofocus: true, placeholder: 'email@example.com') %>
      </div>

      <div class="form-group">
        <%= label_tag(:password, "Password:") %>
        <%= password_field_tag(:password,params[:password],class: 'form-control', autocomplete: 'off', placeholder: 'password') %>
      </div>

      <div class="actions">
        <%= submit_tag("Sign in",class:'btn btn-success')%>
        <%= link_to "Sign up", new_user_path, class: 'btn btn-success'%>
      </div>
    <% end %>
    <br>
  </div>
</div>