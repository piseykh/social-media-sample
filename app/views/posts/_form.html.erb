<div class="well">
  <%= form_for @post, html: { class: 'post_form' } do |f| %>
    <div class="form-group">
      <h4>Update Status</h4>
      <%= f.text_field :content_text, class: 'form-control input-mentionable'%>
    </div>
    <div class="form-group">
      <%= f.file_field :file1 %>
    </div>
    <div class="form-group">
      <%= f.file_field :file2 %>
    </div>
    <div class="form-group">
      <%= f.file_field :file3 %>
    </div>
    <div class="form-group">
      <%= f.submit 'Post', class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
