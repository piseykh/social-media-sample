<div id="user-<%= @user.id %>" class="row">
  <div class="col-lg-3">
    <%= render 'home/user_info' %>
  </div>
  <div class="col-lg-6">
    <div id="activities">
      <% @activities.each do |activity| %>
        <%= render 'posts/post', post: activity%>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3">
    <% if is_current_user?(@user) %>
      <div class="well">
        <ul class="nav nav-pills nav-stacked">
          <li><%= link_to 'New Feeds', root_path%></li>
          <li><%= link_to 'Edit Profile', edit_user_path(@user) %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
